<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty name="app.name" source="spring.application.name" defaultValue="sellia-api"/>
    <springProperty name="app.version" source="project.version" defaultValue="0.0.1-SNAPSHOT"/>
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- In-Memory Appender for Dashboard -->
    <appender name="IN_MEMORY" class="com.follysitou.sellia_backend.logging.InMemoryLogAppender">
    </appender>

    <!-- Development Profile -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="IN_MEMORY"/>
        </root>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>

    <!-- Production Profile -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="IN_MEMORY"/>
        </root>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>

    <!-- Default -->
    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="IN_MEMORY"/>
        </root>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>
</configuration>
